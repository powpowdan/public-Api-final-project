    <form action="/created-joke" method="post">
      <label id="joketext" for="username">What do you want your joke to be about?</label>
      <br>
      <input class="submit" type="text"  name="submitted"> 
      <br>
      <button class="submit" type="submit">Submit</button>
  </form>
  </p>
  
