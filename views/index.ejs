<body>
  <h1>The Horrible Joke Generator</h1>  
  <% if (locals.joke) { %> 
 
  <div class="user"> 
    <p class="joke">
      <%=joke %>
    </p>
    </div>
      <% } %>
      <% if (locals.setup) { %> 
        <div class="user">
        <p class="joke">
          <%=setup %>
        </p>

        <div class="delivery"> 
        <p class="joke"> 
            <%=delivery %> 
        </p>
      </div>
      </div>
      <% } %>
    
  </div>
